@model LibraryWebApplication1.Stadium

@{
    ViewData["Title"] = "Додати стадіон";
}

<h1>Додати стадіон</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StName" class="control-label"></label>
                <input asp-for="StName" class="form-control" />
                <span asp-validation-for="StName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StCity" class="control-label"></label>
                <select asp-for="StCity" class ="form-control" asp-items="ViewBag.StCity"></select>
            </div>
            <div class="form-group">
                <label asp-for="StCapacity" class="control-label"></label>
                <input asp-for="StCapacity" class="form-control" />
                <span asp-validation-for="StCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StId" class="control-label"></label>
                <input asp-for="StId" class="form-control" />
                <span asp-validation-for="StId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Стадіони</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
