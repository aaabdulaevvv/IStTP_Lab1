@model LibraryWebApplication1.City

@{
    ViewData["Title"] = "Додати місто";
}

<h1>Додати місто</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CiName" class="control-label"></label>
                <input asp-for="CiName" class="form-control" />
                <span asp-validation-for="CiName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CiCountry" class="control-label"></label>
                <select asp-for="CiCountry" class ="form-control" asp-items="ViewBag.CiCountry"></select>
            </div>
            <div class="form-group">
                <label asp-for="CiPopulation" class="control-label"></label>
                <input asp-for="CiPopulation" class="form-control" />
                <span asp-validation-for="CiPopulation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CiId" class="control-label"></label>
                <input asp-for="CiId" class="form-control" />
                <span asp-validation-for="CiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index1">Міста</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
